---
import "../styles/global.css";
const {title} = Astro.props;
---


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Lato:wght@400;500&display=swap"
          rel="stylesheet">
</head>

<body>
<header>
    <img src="/logo.png" alt="Certamen de Tunas Castelldefels 2025"/>
    <button class="burger" aria-label="Menú" aria-expanded="false" aria-controls="primary-nav">☰</button>
    <nav id="primary-nav" class="nav">
        <a href="/">Calendario</a>
        <a href="/mapa">Mapa</a>
        <a href="/hoteles">Hoteles</a>
        <a href="/tunas">Participantes</a>
        <a href="/premios">Premios</a>
    </nav>
</header>
<script>
  const btn = document.querySelector('.burger');
  const nav = document.getElementById('primary-nav');

  function update(state) {
    btn.setAttribute('aria-expanded', String(state));
    nav.classList.toggle('open', state);
  }

  btn?.addEventListener('click', () => {
    const isOpen = nav.classList.toggle('open');
    btn.setAttribute('aria-expanded', String(isOpen));
  });
</script>
<main>
    <slot/>
</main>

<footer>
    © 2025 IX Certamen de Tunas de Peritos en Castelldefels – Todos los derechos reservados
</footer>

<style is:global>
    body {
        font-family: 'Lato', sans-serif;
        background-color: #111;
        color: #fdfdfd;
    }

    h1, h2, h3, h4 {
        font-family: 'Playfair Display', sans-serif;
    }

    header {
        background: var(--ac-primary);
        position: sticky;
        top: 0;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
        padding: 0.25rem 0.75rem;
    }

    header h1 {
        margin: 0;
        font-size: 2.8rem;
        color: #fff;
    }

    header img {
        max-height: 80px;
        width: auto;
        height: auto;
        display: block
    }

    .burger {
        background: transparent;
        border: none;
        color: #000;
        font-size: 1.5rem;
        line-height: 1;
        border-radius: 8px;
        padding: 0.25rem 0.5rem;
        cursor: pointer;
        display: none; /* visible only on mobile */
        position: absolute;
        top: 1.75rem;
        right: 0.5rem;
    }

    nav a {
        color: #000;
        text-decoration: none;
        margin: 10px 0.1rem;
        font-weight: normal;
        transition: color 0.2s ease;
        padding: 16px;
    }

    nav a:hover {
        color: #ffd700;
    }

    main {
        padding: 16px;
        max-width: 700px;
        margin: auto;
    }

    footer {
        margin-top: 3rem;
        padding: 1.5rem;
        text-align: center;
        background: #1a1a1a;
        color: #aaa;
        font-size: 0.9rem;
    }

    @media (max-width: 1000px) {
        body {
            font-size: 16px;
        }

        header {
            flex-direction: column;
            align-items: flex-start;
        }

        .burger {
            display: inline-block;
        }

        /* Hide nav by default on mobile; show when open with quick animation */
        .nav {
            width: 100%;
            flex-direction: column;
            align-items: flex-end;
            justify-content: flex-start;
            gap: 0;
            overflow: hidden;
            max-height: 0;
            opacity: 0;
            transform: translateY(-4px);
            transition: max-height 180ms ease, opacity 160ms ease, transform 160ms ease;
            display: flex;
        }

        .nav.open {
            max-height: 400px; /* enough to show all links */
            opacity: 1;
            transform: translateY(0);
        }

        nav a {
            display: block;
            width: auto;
            font-size: 1rem;
            padding: 0.1rem 0.75rem;
            text-align: right;
        }

        footer {
            font-size: 0.8rem;
        }

        img {
            max-width: 100%;
            height: auto;
        }
    }

    /* Desktop overrides: show nav inline, hide burger */
    @media (min-width: 1000px) {
        header {
            flex-direction: row;
            align-items: center;
            margin-bottom: 0.75rem; /* vertical margin when there is no burger */
        }

        .burger {
            display: none;
        }

        .nav {
            display: block;
        }
    }

    @media (max-width: 420px) {
        nav a {
            text-align: center;
        }
    }
</style>
</body>
</html>
